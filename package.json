{
	"name": "vue-email-personaliser",
	"version": "0.9.3",
	"private": false,
	"author": "Damilola Olowookere <damms005@gmail.com>",
	"homepage": "https://github.com/damms005/vue-email-personaliser#readme",
	"description": "Vue Web Component for formatting email message based on CSV file content. An example of a backend (Laravel package) using this package is at https://github.com/damms005/laravel-personalised-email-sender",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/damms005/vue-email-personaliser.git"
	},
	"keywords": [
		"Email sender",
		"CSV Editor",
		"TSV Editor",
		"Vue Js",
		"TailwindCss"
	],
	"bugs": {
		"url": "https://github.com/damms005/vue-email-personaliser/issues"
	},
	"scripts": {
		"serve": "vue-cli-service serve",
		"build-web-component": "vue-cli-service build --target wc --name vue-email-personaliser src/App.vue --inline-vue",
		"build-report": "vue-cli-service build --report",
		"lint": "vue-cli-service lint"
	},
	"dependencies": {
		"@tailwindcss/postcss7-compat": "^2.0.3",
		"autoprefixer": "^9.8.6",
		"core-js": "^2.6.12",
		"postcss": "^7.0.35",
		"tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.0.3",
		"vue": "^2.6.12"
	},
	"devDependencies": {
		"@vue/cli-plugin-babel": "^3.12.1",
		"@vue/cli-plugin-eslint": "^3.12.1",
		"@vue/cli-service": "^4.5.11",
		"babel-eslint": "^10.1.0",
		"eslint": "^5.16.0",
		"eslint-plugin-vue": "^5.0.0",
		"vue-template-compiler": "^2.6.12",
		"webpack-cli": "^3.3.12"
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true
		},
		"extends": [
			"plugin:vue/essential",
			"eslint:recommended"
		],
		"rules": {
			"no-console": "off",
			"no-debugger": "off"
		},
		"parserOptions": {
			"parser": "babel-eslint"
		}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions"
	]
}
